<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.yz.mis.mapper.SystemUserMapper" >
  <resultMap id="BaseResultMap" type="com.yz.model.entity.SystemUser" >
    <id column="id" property="id" jdbcType="BIGINT" />
    <result column="username" property="username" jdbcType="VARCHAR" />
    <result column="password" property="password" jdbcType="VARCHAR" />
    <result column="name" property="name" jdbcType="VARCHAR" />
    <result column="sex" property="sex" jdbcType="TINYINT" />
    <result column="mobile" property="mobile" jdbcType="CHAR" />
    <result column="email" property="email" jdbcType="VARCHAR" />
    <result column="role" property="role" jdbcType="CHAR" />
    <result column="root" property="root" jdbcType="TINYINT" />
    <result column="dept_id" property="deptId" jdbcType="INTEGER" />
    <result column="status" property="status" jdbcType="TINYINT" />
    <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
    <result column="update_time" property="updateTime" jdbcType="TIMESTAMP" />
    <result column="is_delete" property="isDelete" jdbcType="TINYINT" />
  </resultMap>

  <!-- 定义公共SQL -->
  <sql id="commonConditions">
      AND u.status = 1
      AND u.is_delete = 0
  </sql>

  <select id="searchUserPermissions" parameterType="Long" resultType="String">
    SELECT DISTINCT p.permission_name
    FROM tb_system_user u
           JOIN tb_system_role r ON JSON_CONTAINS(u.role, CAST(r.id AS CHAR))
           JOIN tb_system_permission p ON JSON_CONTAINS(r.permissions, CAST(p.id AS CHAR))
    WHERE u.id = #{systemUserId}
      <include refid="commonConditions"/>
  </select>

  <select id="searchUserMenus" parameterType="Long" resultType="String">
    SELECT DISTINCT p.menu_name
    FROM tb_system_user u
           JOIN tb_system_role r ON JSON_CONTAINS(u.role, CAST(r.id AS CHAR))
           JOIN tb_system_permission p ON JSON_CONTAINS(r.permissions, CAST(p.id AS CHAR))
    WHERE u.id = #{systemUserId}
     <include refid="commonConditions"/>
  </select>


</mapper>